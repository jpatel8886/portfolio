{
  "name": "JParticles",
  "description": "A succinct, efficient, and lightweight Canvas plugin library for building some cool particle effects.",
  "version": "2.0.1",
  "main": "production/jparticles.all.js",
  "scripts": {
    "dev": "gulp --gulpfile ./bin/gulpfile.dev.js",
    "build": "gulp --gulpfile ./bin/gulpfile.build.js && npm test",
    "test": "npm run test:unit",
    "test:unit": "nyc ava --verbose",
    "test:e2e": "testcafe chrome,firefox,ie test/e2e/*.ts --speed 0.7",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": {
      "presets": [
        "es2015",
        "stage-0"
      ]
    },
    "files": [
      "test/unit/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.22.0",
    "browser-sync": "^2.18.8",
    "coveralls": "^2.13.1",
    "eslint": "^3.9.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-changed": "^2.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^3.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.5.0",
    "gulp-uglify": "^2.1.2",
    "gulp-zip": "^4.0.0",
    "jsdom": "^11.1.0",
    "nyc": "^11.0.3",
    "testcafe": "^0.16.2",
    "through2": "^2.0.3"
  },
  "devEngines": {
    "node": "7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Barrior/JParticles.git"
  },
  "author": "Barrior",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Barrior/JParticles/issues"
  },
  "homepage": "jparticles.js.org",
  "keywords": [
    "JParticles",
    "Particle effects"
  ]
}
